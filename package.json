{
  "name": "scot3004",
  "version": "1.5.2",
  "description": "Página web de presentación de Sergio C. Orozco Torres",
  "main": "Gulpfile.js",
  "dependencies": {
    "bootstrap": "^3.3.6",
    "bootstrap-sass": "^3.3.6",
    "bootswatch": "^3.3.6",
    "devicons": "^1.8.0",
    "font-awesome": "^4.6.3",
    "hover.css": "^2.0.2",
    "jquery": "^3.0.0",
    "jquery-smooth-scroll": "^1.7.2",
    "jquery.easing": "^1.3.2",
    "magnific-popup": "^1.1.0"
  },
  "devDependencies": {
    "browser-sync": "^2.13.0",
    "bs-html-injector": "^3.0.2",
    "eslint": "^3.0.0",
    "fontify": "0.0.2",
    "gulp": "^3.8.11",
    "gulp-imagemin": "^3.0.1",
    "gulp-newer": "^1.1.0",
    "gulp-notify": "^2.2.0",
    "imagemin-cli": "^3.0.0",
    "imagemin-newer": "^1.0.2",
    "nodemon": "^1.9.2",
    "npm-run-all": "^2.1.2",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.7.0"
  },
  "scripts": {
    "lint:css": "scss-lint ./_sass",
    "lint:html": "htmlproofer ./_site --disable-external --url-ignore '/#.*/'",
    "lint:js": "eslint . --ext .js",
    "lint": "npm-run-all lint:js lint:css lint:html",
    "test": "npm run lint",
    "clean": "rm -rf fonts/ css/ js/ img/ _site",
    "clean:site": "rm -rf _site",
    "mkdir": "mkdir -p fonts css js img",
    "mkdir:dev": "mkdir -p _site/fonts _site/css _site/js _site/img",
    "build:css": "sass _sass/main.scss:css/main.min.css --style compressed",
    "build:jk": "JEKYLL_ENV=production jekyll build",
    "build:js": "browserify resources/js/main.js | uglifyjs -c > js/main.min.js",
    "build": "NODE_ENV=production npm-run-all clean build:jk mkdir build:js build:css img fonts",
    "watch:css": "sass _sass/main.scss:_site/css/main.min.css --watch",
    "watch:jk": "nodemon --ignore _site/ --ext html,md,yml --exec 'jekyll build'",
    "watch:js": "watchify resources/js/main.js -do _site/js/main.min.js",
    "watch": "npm-run-all --parallel watch:jk watch:js watch:css serve",
    "prewatch": "npm run mkdir",
    "start": "npm-run-all watch ",
    "imagemin": "imagemin-newer resources/img/** img",
    "img": "gulp img",
    "serve": "node app.js",
    "fonts": "fontify"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Scot3004/Scot3004.git"
  },
  "keywords": [
    "scot3004",
    "developer"
  ],
  "author": "Scot3004",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/Scot3004/Scot3004/issues"
  },
  "homepage": "https://Scot3004.github.io",
  "optionalDependencies": {}
}
